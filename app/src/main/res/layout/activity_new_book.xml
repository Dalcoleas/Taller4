<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".gui.activities.NewBookActivity" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text="New Book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_new_book" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.498" android:textSize="30sp" android:textColor="#000000"/>
    <TextView
            android:text="Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/tv_new_book" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp" android:layout_marginTop="44dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/title_newbook" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_new_book"
            android:hint="Titulo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"/>
    <TextView
            android:text="Autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp" android:layout_marginTop="36dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/author_newbook"
            android:hint="Autor" app:layout_constraintTop_toBottomOf="@+id/title_newbook"
            android:layout_marginEnd="52dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="52dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="ISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp" android:layout_marginTop="28dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/isbn_newbook"
            android:hint="ISBN" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/author_newbook"
            android:layout_marginEnd="52dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="52dp"/>
    <TextView
            android:text="Resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/summary_newbook"
            android:hint="Resumen" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/isbn_newbook"
            android:layout_marginEnd="52dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="52dp"/>
    <TextView
            android:text="Imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="72dp" android:layout_marginStart="72dp" android:layout_marginTop="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/cover_newbook"
            android:hint="Link Imagen..." android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/summary_newbook" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp" android:layout_marginRight="52dp"/>
    <TextView
            android:text="Tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tags_newbook"
            android:hint="Tags" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cover_newbook"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"/>
    <TextView
            android:text="Publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp" android:layout_marginTop="28dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/publisher_newbook"
            android:hint="Publisher" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tags_newbook" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="53dp" android:layout_marginRight="53dp"/>
    <Button
            android:text="Agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_add_newbook" android:layout_marginTop="424dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_new_book" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" android:layout_marginStart="160dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.006"/>
</androidx.constraintlayout.widget.ConstraintLayout>